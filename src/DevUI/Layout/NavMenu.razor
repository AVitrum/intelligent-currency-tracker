@using DevUI.Helpers
@inject IJSRuntime Js
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/all-users">DevUI</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        @if (!_isTokenPresent)
        {
            <div class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span>
                    Home
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item">
                <NavLink class="nav-link" href="create-admin">
                    <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span>
                    Create Admin
                </NavLink>
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="role-manager">
                    <span class="bi bi-person-plus-fill-nav-menu" aria-hidden="true"></span>
                    Role Manager
                </NavLink>
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="all-users">
                    <span class="bi bi-person-nav-menu" aria-hidden="true"></span>
                    User List
                </NavLink>
            </div>
            <div class="nav-item">
                <NavLink class="nav-link" href="currency-details">
                    <span class="bi bi-person-nav-menu" aria-hidden="true"></span>
                    Exchange Rates
                </NavLink>
            </div>
            <div class="nav-item">
                <button class="nav-link" @onclick="Logout">
                    <span class="bi bi-logout-nav-menu" aria-hidden="true"></span>
                    Logout
                </button>
            </div>
        }
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;
    private bool _isTokenPresent;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        _isTokenPresent = await Js.InvokeAsync<string?>("localStorage.getItem", "jwtToken") != null;
    }

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

    private async Task Logout()
    {
        await JwtTokenHelper.RemoveJwtTokensFromLocalStorageAsync(Js, Navigation);
    }

}
