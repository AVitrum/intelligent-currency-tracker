@page "/"

<PageTitle>@_pageTitle</PageTitle>

<div class="page-container home-page">
    <header class="header-section">
        <h2>@_welcomeTitle</h2>
        <p class="description">
            @_welcomeDescription
        </p>
        <div class="hero-image-placeholder">
            <img src="images/hero.png" alt="@_heroBannerAlt"/>
        </div>
    </header>

    <section class="features-section">
        <h3 class="section-title">@_keyFeaturesTitle</h3>
        <div class="features-grid">
            <div class="feature-card">
                <h4>@_featureRealTimeTrackingTitle</h4>
                <p>@_featureRealTimeTrackingDescription</p>
            </div>
            <div class="feature-card">
                <h4>@_featureHistoricalAnalysisTitle</h4>
                <p>@_featureHistoricalAnalysisDescription</p>
            </div>
            <div class="feature-card">
                <h4>@_featureAiForecastsTitle</h4>
                <p>@_featureAiForecastsDescription</p>
            </div>
            <div class="feature-card">
                <h4>@_featureCustomDashboardTitle</h4>
                <p>@_featureCustomDashboardDescription</p>
            </div>
        </div>
    </section>

    <section class="how-it-works-section">
        <h3 class="section-title">@_howItWorksTitle</h3>
        <div class="steps-container">
            <div class="step-card">
                <div class="step-image-placeholder">
                    <img src="images/step1.png" alt="@_step1Alt"/>
                </div>
                <h4>@_step1Title</h4>
                <p>@_step1Description</p>
            </div>
            <div class="step-card">
                <div class="step-image-placeholder">
                    <img src="images/step2.png" alt="@_step2Alt"/>
                </div>
                <h4>@_step2Title</h4>
                <p>@_step2Description</p>
            </div>
            <div class="step-card">
                <div class="step-image-placeholder">
                    <img src="images/step3.png" alt="@_step3Alt"/>
                </div>
                <h4>@_step3Title</h4>
                <p>@_step3Description</p>
            </div>
        </div>
    </section>

    <section class="cta-section">
        <h3 class="section-title">@_ctaTitle</h3>
        <p>@_ctaDescription</p>
        <button class="cta-button" @onclick="NavigateToDashboard">@_ctaButtonDashboard</button>
        <button class="cta-button secondary" @onclick="NavigateToRegister">@_ctaButtonSignup</button>
    </section>

    <footer class="home-footer">
        <p>@((MarkupString)_footerCopyrightPrefix)@DateTime.Now.Year @_footerCopyrightSuffix</p>
        <div class="footer-links">
            <a href="/privacy">@_footerLinkPrivacy</a>
            <a href="/terms">@_footerLinkTerms</a>
            <a href="/contacts">@_footerLinkContact</a>
        </div>
    </footer>
</div>