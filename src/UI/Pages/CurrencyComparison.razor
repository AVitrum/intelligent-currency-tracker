@page "/compare-currencies"
@using Domain.Constants

<PageTitle>Currency Comparison</PageTitle>

<div class="comparison-page-container">
    <h1 class="comparison-page-title">Currency Comparison</h1>

    <div class="form-section-container card-style">
        <div class="form-grid">
            <div class="form-group">
                <label for="currencySelect1">Base Currency:</label>
                <select id="currencySelect1" @bind="_selectedCurrency1" class="form-control">
                    @if (_currencies.Count == 0)
                    {
                        <option value="">Loading currencies...</option>
                    }
                    else
                    {
                        @foreach (string c in _currencies)
                        {
                            <option value="@c">@c</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="currencySelect2">Compare With:</label>
                <select id="currencySelect2" @bind="_selectedCurrency2" class="form-control">
                    @if (_currencies.Count == 0)
                    {
                        <option value="">Loading currencies...</option>
                    }
                    else
                    {
                        @foreach (string c in _currencies)
                        {
                            <option value="@c">@c</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="startDate">Start Date:</label>
                <input id="startDate" type="date" @bind="_startDate" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="endDate">End Date:</label>
                <input id="endDate" type="date" @bind="_endDate" class="form-control"/>
            </div>
        </div>
        <button @onclick="HandleCompareCurrenciesAsync" class="action-button compare-button" disabled="@_isLoading">
            @if (_isLoading && _comparisonDetails == null)
            {
                <span class="spinner"></span>
            }
            else
            {
                <span>Compare Currencies</span>
            }
        </button>
    </div>

    @if (_isLoading && _comparisonDetails == null)
    {
        <div class="loading-message card-style">
            <p>Loading comparison data...</p>
        </div>
    }
    else if (_comparisonDetails != null)
    {
        <div class="analytics-results-container">
            <div class="analytics-summary card-style">
                <h2 class="card-section-title">Comparison Summary</h2>
                <p><strong>Analysis
                        Period:</strong> @_comparisonDetails.AnalysisStartDate.ToString(DateConstants.DateFormat) - @_comparisonDetails.AnalysisEndDate.ToString(DateConstants.DateFormat)
                </p>
                <p><strong>Correlation Coefficient:</strong> @_comparisonDetails.CorrelationCoefficient.ToString("N4")
                </p>
                <p><strong>Average Spread:</strong> @_comparisonDetails.AverageSpread.ToString("N4")</p>
                <p><strong>Spread Standard
                        Deviation:</strong> @_comparisonDetails.SpreadStandardDeviation.ToString("N4")</p>
            </div>

            <div class="currency-details-grid">
                <div class="analytics-card">
                    <h2 class="card-section-title">@_comparisonDetails.BaseCurrency.CurrencyPair Details</h2>
                    @RenderSingleCurrencyAnalytics(_comparisonDetails.BaseCurrency)
                </div>

                <div class="analytics-card">
                    <h2 class="card-section-title">@_comparisonDetails.ComparedCurrency.CurrencyPair Details</h2>
                    @RenderSingleCurrencyAnalytics(_comparisonDetails.ComparedCurrency)
                </div>
            </div>
        </div>
    }
    else if (!_isLoading)
    {
        <div class="no-data-message-container card-style">
            <p>Select two different currencies and a date range, then click "Compare Currencies" to see the
                analysis.</p>
        </div>
    }

    <button @onclick="NavigateToDashboard" class="action-button back-button">Dashboard</button>
</div>