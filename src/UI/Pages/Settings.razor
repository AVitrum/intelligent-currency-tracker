@page "/settings"
@using Domain.Enums

<div class="settings-page">
    <section class="settings-header">
        <h2>Settings</h2>
        <div class="settings-description">
            Manage your preferences for language, theme, and notifications.
        </div>
    </section>

    <EditForm Model="@Dto" OnValidSubmit="SaveSettings">
        <div class="settings-card">
            <div class="settings-group">
                <label for="language">Language</label>
                <select id="language" class="settings-control" @bind="Dto.Language">
                    @foreach (Language lang in Enum.GetValues<Language>())
                    {
                        <option value="@lang.ToString()">@lang</option>
                    }
                </select>
            </div>
            <div class="settings-group">
                <label for="theme">Theme</label>
                <select id="theme" class="settings-control" @bind="Dto.Theme">
                    @foreach (Theme theme in Enum.GetValues<Theme>())
                    {
                        <option value="@theme.ToString()">@theme</option>
                    }
                </select>
            </div>
            <div class="settings-group">
                <label for="summary"></label>
                <select id="summary" class="settings-control" @bind="Dto.SummaryType">
                    @foreach (SummaryType summary in Enum.GetValues<SummaryType>())
                    {
                        <option value="@summary.ToString()">@summary</option>
                    }
                </select>
            </div>
            <div class="settings-group">
                <label>
                    <input type="checkbox" class="settings-checkbox" @bind="Dto.NotificationsEnabled"/>
                    Enable notifications
                </label>
            </div>
            <div class="settings-actions">
                <button type="submit" class="settings-save-btn">Save</button>
            </div>
        </div>
    </EditForm>
</div>